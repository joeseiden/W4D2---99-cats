<% if cat_rental_request.persisted? %>
  <% action_url = cat_rental_request_url(cat_rental_request)%>
  <% method = "PATCH" %>
  <% button_val = "Update Cat" %>
<% else %>
  <% action_url = cat_rental_requests_url %>
  <% method = "POST" %>
  <% button_val = "Request Rental" %>
<% end %>

<form action="<%= action_url %>" method="post">


  <input type="hidden" name="_method" value="<%= method %>">

  <label for="Choose a Cat">Choose a Cat</label>
  <select id="Choose a Cat" name="cat_rental_request[cat_id]">
    <option value="Select Cat" disabled="true" <%= @cat_rental_request.cat_id ? "" : "selected"%> >Select Cat</option>
      <% Cat.all.each do |cat|%>
        <option value=" <%= cat.id %>" > <%= cat.name %> </option>
    <% end %>
  </select>

  <br>

  <label for="Start_date">Start Date</label>
  <input id="Start_date" type="date" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date %>">

  <br>

  <label for="End_date">End Date</label>
  <input id="End_date" type="date" name="cat_rental_request[end_date]" value="<%= @cat_rental_request.end_date %>">

  <br>

  <input type="submit" value="<%= button_val %>">

</form>
